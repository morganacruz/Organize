<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicialLogadoActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/fundo_inicial">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Bem vindo!"
        android:textColor="@color/preto"
        android:textSize="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtexplica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="88dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="Organize é um app para ajudar na organização de seus projetos colocando metas e progressos"
        android:textColor="@color/preto"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="7dp"
        android:text="Adicionar Projetos"
        android:textColor="@color/preto"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnaddproject"
        app:layout_constraintStart_toEndOf="@+id/btnaddproject" />


    <Button
        android:id="@+id/btnaddproject"
        android:layout_width="52dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/btn_add_preto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405" />


</android.support.constraint.ConstraintLayout>